BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
#            on_text: app.handle_calculate()
        BoxLayout:
            orientation:'vertical'
            size_hint: (0.25, 1)
            Button:
                text: 'Up'
                font_size: 24
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 24
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert Miles to KM'
        font_size: 24
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: '54.71756'
        color: (1, 1, 0, 1)